@model IEnumerable<NewsApp.Domain.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashboard";
}

<h2>Manage Categories</h2>

<a class="btn btn-primary mb-3" href="/Category/Create">Create New Category</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Category/Edit/@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Category/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>