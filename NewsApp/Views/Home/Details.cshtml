@model NewsToReturnDto

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" alt="News Image" />
        }

        <div class="card-body">
            <h2 class="card-title">@Model.Title</h2>

            <p class="text-muted">
                <i class="bi bi-calendar-event"></i> @Model.CreatedAt.ToString("yyyy-MM-dd") |
                <i class="bi bi-folder-fill"></i> @Model.CategoryName
            </p>

            <hr />

            <p class="card-text">
                @Model.Body
            </p>

            <a asp-action="Index" class="btn btn-outline-secondary mt-3">← Back to News</a>
        </div>
    </div>
</div>
